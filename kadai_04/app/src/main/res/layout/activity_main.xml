<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/janken"
        android:textColor="#1E90FF"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Singer"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="90dp"
        android:contentDescription="TODO"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ResultImage"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/singer" />

    <ImageButton
        android:id="@+id/Paper_btn"
        android:layout_width="53dp"
        android:layout_height="78dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:background="@null"
        android:contentDescription="TODO"
        android:onClick="btn"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/Rock_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/paper" />

    <ImageButton
        android:id="@+id/Rock_btn"
        android:layout_width="53dp"
        android:layout_height="78dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:contentDescription="TODO"
        android:onClick="btn"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/rock" />

    <ImageButton
        android:id="@+id/Scissors_btn"
        android:layout_width="53dp"
        android:layout_height="78dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@null"
        android:contentDescription="TODO"
        android:onClick="btn"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toEndOf="@+id/Rock_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/scissorce" />

    <ImageView
        android:id="@+id/ResultImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toStartOf="@+id/Singer"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/paper" />


</androidx.constraintlayout.widget.ConstraintLayout>